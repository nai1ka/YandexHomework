<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_graph"
    app:startDestination="@id/itemListFragment">

    <fragment
        android:id="@+id/itemListFragment"
        android:name="ru.ndevelop.yandexhomework.presentation.screens.itemList.ItemListFragment"
        android:label="ItemListFragment">
        <action
            android:id="@+id/action_itemListFragment_to_addItemFragment"
            app:destination="@id/addItemFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_itemListFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
        <action
            android:id="@+id/action_itemListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="ru.ndevelop.yandexhomework.presentation.screens.addItem.AddItemFragment"
        android:label="AddItemFragment">
        <argument
            android:name="todoItem"
            android:defaultValue="@null"
            app:argType="ru.ndevelop.yandexhomework.core.models.TodoItem"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="ru.ndevelop.yandexhomework.presentation.screens.aboutApp.AboutAppFragment"
        android:label="AboutAppFragment">

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.ndevelop.yandexhomework.presentation.screens.settings.SettingsFragment"
        android:label="SettingsFragment">

    </fragment>

</navigation>