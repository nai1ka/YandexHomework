<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TextStyle">

    </style>

    <style name="TextStyle.LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">38dp</item> <!-- TODO dp or sp -->
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">32dp</item> <!-- TODO dp or sp -->
    </style>

    <style name="TextStyle.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">24dp</item> <!-- TODO dp or sp -->
    </style>

    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
